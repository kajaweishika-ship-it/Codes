#include <stdio.h>
int main() {
    int n, num, pos=0, neg=0, zero=0;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    for(int i=0; i<n; i++){
        scanf("%d", &num);
        if(num>0) pos++;
        else if(num<0) neg++;
        else zero++;
    }
    printf("Positive=%d, Negative=%d, Zero=%d", pos, neg, zero);
    return 0;
}
