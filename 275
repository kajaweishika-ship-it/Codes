#include <stdio.h>
int main(){
    int ch; float km;
    printf("1.KM to M 2.KM to CM 3.KM to MM: ");
    scanf("%d",&ch);
    printf("Enter KM: "); scanf("%f",&km);
    switch(ch){
        case 1: printf("Meters=%.2f",km*1000); break;
        case 2: printf("CM=%.2f",km*100000); break;
        case 3: printf("MM=%.2f",km*1000000); break;
        default: printf("Invalid");
    }
}
