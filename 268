#include <stdio.h>
int main(){
    int ch; float a,b;
    printf("1.Square 2.Rectangle 3.Circle: ");
    scanf("%d",&ch);
    switch(ch){
        case 1: printf("Enter side: "); scanf("%f",&a);
                printf("Perimeter=%.2f",4*a); break;
        case 2: printf("Enter l,b: "); scanf("%f%f",&a,&b);
                printf("Perimeter=%.2f",2*(a+b)); break;
        case 3: printf("Enter r: "); scanf("%f",&a);
                printf("Perimeter=%.2f",2*3.14*a); break;
        default: printf("Invalid");
    }
}
