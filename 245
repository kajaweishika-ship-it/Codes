#include <stdio.h>
int main() {
    int ch; float c, f;
    printf("1.C to F  2.F to C: ");
    scanf("%d",&ch);
    switch(ch) {
        case 1: printf("Enter C: "); scanf("%f",&c);
                printf("F = %.2f", (c*9/5)+32); break;
        case 2: printf("Enter F: "); scanf("%f",&f);
                printf("C = %.2f", (f-32)*5/9); break;
        default: printf("Invalid");
    }
}
