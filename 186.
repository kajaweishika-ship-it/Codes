#include <stdio.h>
void sort(int a[],int n){
    for(int i=0;i<n-1;i++)
        for(int j=i+1;j<n;j++)
            if(a[i]>a[j]){int t=a[i];a[i]=a[j];a[j]=t;}
}
float median(int a[],int n){
    sort(a,n);
    if(n%2==0) return (a[n/2-1]+a[n/2])/2.0;
    else return a[n/2];
}
int main(){
    int a[]={5,3,2,4,1};
    printf("Median=%.2f",median(a,5));
}
