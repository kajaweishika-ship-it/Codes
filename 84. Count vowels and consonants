#include <stdio.h>
#include <string.h>
int main() {
    char str[] = "Hello World";
    int vowels=0, consonants=0;
    for(int i = 0; i < strlen(str); i++) {
        char c = str[i];
        if((c>='a'&&c<='z')||(c>='A'&&c<='Z')) {
            if(c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||
               c=='A'||c=='E'||c=='I'||c=='O'||c=='U')
                vowels++;
            else
                consonants++;
        }
    }
    printf("Vowels=%d Consonants=%d", vowels, consonants);
    return 0;
}
