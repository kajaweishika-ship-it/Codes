#include <stdio.h>
#include <math.h>
int main() {
    int ch; float p, r, t;
    printf("1.Simple 2.Compound: ");
    scanf("%d",&ch);
    printf("Enter P, R, T: ");
    scanf("%f%f%f",&p,&r,&t);
    switch(ch) {
        case 1: printf("SI = %.2f", (p*r*t)/100); break;
        case 2: printf("CI = %.2f", p*pow((1+r/100),t)-p); break;
        default: printf("Invalid");
    }
}
