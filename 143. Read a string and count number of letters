#include <stdio.h>
#include <string.h>
int main() {
    char str[100];
    printf("Enter a string: ");
    scanf(" %[^\n]", str);
    int count=0;
    for(int i=0;i<strlen(str);i++){
        if((str[i]>='A' && str[i]<='Z') || (str[i]>='a' && str[i]<='z')) count++;
    }
    printf("Number of letters = %d", count);
    return 0;
}
