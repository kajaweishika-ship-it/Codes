#include <stdio.h>
int main() {
    int ch; float a,b;
    printf("1.Circle 2.Square 3.Triangle: ");
    scanf("%d",&ch);
    switch(ch) {
        case 1: printf("Enter radius: "); scanf("%f",&a);
                printf("Area = %.2f",3.14*a*a); break;
        case 2: printf("Enter side: "); scanf("%f",&a);
                printf("Area = %.2f",a*a); break;
        case 3: printf("Enter base,height: "); scanf("%f%f",&a,&b);
                printf("Area = %.2f",0.5*a*b); break;
        default: printf("Invalid");
    }
}
