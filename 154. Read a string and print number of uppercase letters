#include <stdio.h>
#include <string.h>
int main() {
    char str[100];
    int count=0;
    printf("Enter a string: ");
    scanf(" %[^\n]", str);
    for(int i=0;i<strlen(str);i++){
        if(str[i]>='A' && str[i]<='Z') count++;
    }
    printf("Number of uppercase letters = %d", count);
    return 0;
}
